@model GestorEventos.Servicios.Entidades.EventoModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">Crear</h1>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2 class="text-white">Crear nuevo Evento - Ingrese su información</h2>
            <div class="form-group">

                <input asp-for="IdEvento" class="form-control" type="hidden" value="0" />
                <span asp-validation-for="IdEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreEvento" class="control-label text-white"></label>
                <input asp-for="NombreEvento" class="form-control" />
                <span asp-validation-for="NombreEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEvento" class="control-label text-white"></label>
                <input asp-for="FechaEvento" class="form-control" value="01/01/2000 01:00:00" min="01/01/2000 01:00:00" />
                <span asp-validation-for="FechaEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadPersonas" class="control-label text-white"></label>
                <input asp-for="CantidadPersonas" class="form-control" />
                <span asp-validation-for="CantidadPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoEvento" class="control-label text-white"></label>
                <select asp-for="IdTipoEvento">
                    <option value="1">Despedida de Solteros</option>-->
                    <option value="2">Despedida de Solteras</option>
                </select>
                <span asp-validation-for="IdTipoEvento" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="IdPersonaAgasajada" class="form-control" type="hidden" value="0" />
                <span asp-validation-for="IdPersonaAgasajada" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="IdUsuario" class="form-control" type="hidden" value="0" />
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Visible" value="true" type="hidden" />
                    <input class="form-check-input" asp-for="Borrado" value="true" type="hidden" />
                    <input asp-for="IdEstadoEvento" class="form-control" type="hidden" value="2" />

                </label>
            </div>
            <h3 class="text-white">Datos del Agasajado</h3>
            <div class="form-group">

                <input asp-for="IdPersona" class="form-control " type="hidden" value="0" />
                <span asp-validation-for="IdPersona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label text-white"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label text-white"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label text-white"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label text-white"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label text-white"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="hidden" asp-for="Borrado" value="false" /> 
                </label>
            </div>


            <table>

                <thead>
                    <th></th>
                <th class="text-white">Servicio</th>
                <th class="text-white">Precio</th>
                </thead>
                <tbody>

                    @foreach( var servicio in Model.ListaDeServiciosDisponibles){ 
                            
                        <tr>
                            <td>

                                <input class="text-white" type="checkbox" name="Servicio" value="@servicio.IdServicio" />
                            </td>
                            <td>
                                <span class="text-white">@Html.DisplayFor(modelItem => servicio.Descripcion)</span>
                            </td>
                            <td>
                                <span class="text-white">@Html.DisplayFor(modelItem => servicio.PrecioServicio)</span>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
